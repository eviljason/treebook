<div class="row">
  <div class="span4">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
  <%= devise_error_messages! %>
<fieldset>
      <legend>Sign up</legend>

<div><%= f.input :first_name %></div>

<div><%= f.input :last_name %></div>

<div><%= f.input :profile_name %></div>

  <div><%= f.input :email, :autofocus => true %></div>

  <div><%= f.input :password %></div>

  <div><%= f.input :password_confirmation %></div>

  <div><%= f.button :submit, "Sign up" %></div>
  <%= render "devise/shared/links" %>
</fieldset>
<% end %>

 </div>


<div class= "span8">
  <div class = "hero-unit">
    <h1>Join Today!</h1>
    <p>Join the only private community in this family!</p>
  </div>
  </div>
</div>